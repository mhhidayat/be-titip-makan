{
    "openapi": "3.0.3",
    "info": {
        "title": "Titip Makan RESTful API",
        "description": "API Spec for Titip Makan RESTful API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api"
        }
    ],
    "paths": {
        "/login": {
            "post": {
                "tags": ["Authentication"],
                "description": "Login",
                "summary": "Login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "phone_number": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }       
                },
                "responses": {
                    "200": {
                        "description": "Success Login",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "default": true
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "token": {
                                                    "type": "string"
                                                },
                                                "users": {
                                                    "$ref": "#/components/schemas/UserData"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user": {
            "get": {
                "security": [{
                    "TitipMakanAuth" : []
                }],
                "tags": ["Authentication"],
                "description": "Get users data detail",
                "summary": "Get users data detail",
                "responses": {
                    "200": {
                        "description": "Getting data users detail",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "default": true
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "users": {
                                                    "$ref": "#/components/schemas/UserData"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/categories": {
            "get": {
                "security": [{
                    "TitipMakanAuth" : []
                }],
                "tags": ["Dashboard"],
                "description": "Get categories",
                "summary": "Get categories",
                "responses": {
                    "200": {
                        "description": "Getting data categories",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "default": true
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "categories": {
                                                    "$ref": "#/components/schemas/CategoriesData"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/restaurants": {
            "get": {
                "security": [{
                    "TitipMakanAuth" : []
                }],
                "tags": ["Dashboard"],
                "description": "Get restaurants by categories",
                "summary": "Get Get restaurants by categories",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "category_id": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }       
                },
                "responses": {
                    "200": {
                        "description": "Getting data restaurants by categories",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "default": true
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "categories": {
                                                    "$ref": "#/components/schemas/RestaurantData"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "TitipMakanAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "Authorization",
                "description": "Authentication for Titip Makan API"
            }
        },
        "schemas": {
            "UserData": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name":{
                        "type": "string"
                    },
                    "phone_number":{
                        "type": "string"
                    }
                }  
            },
            "CategoriesData": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name":{
                        "type": "string"
                    }
                }  
            },
            "RestaurantData": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name":{
                        "type": "string"
                    },
                    "category_id":{
                        "type": "string"
                    }
                }  
            }
        }
    }
}